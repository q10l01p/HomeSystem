# HomeSystem 部署配置
# 复制此文件为 .env 并修改配置值
# cp .env.example .env && vim .env

# ============================================================
# 必填配置
# ============================================================

# 数据库密码（请设置一个安全的密码）
DB_PASSWORD=your_secure_password_here

# 硅基流动 API Key（从 https://siliconflow.cn 获取）
SILICONFLOW_API_KEY=sk-your_siliconflow_api_key

# MinerU API Key（从 https://mineru.net/apiManage/docs 获取）
MINERU_API_KEY=your_mineru_api_key

# ============================================================
# 可选配置（有默认值）
# ============================================================

# 数据库配置
DB_NAME=homesystem
DB_USER=homesystem
DB_PORT=15432

# Redis 配置
REDIS_PORT=16379
REDIS_DB=0

# 应用配置
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=paper-analysis-prod-key-change-me

# LLM 配置
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1
DEFAULT_LLM_MODEL=siliconflow
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# MinerU 配置
MINERU_BASE_URL=https://mineru.net
MINERU_TIMEOUT=600
MINERU_POLL_INTERVAL=5
OCR_MAX_PAGES=50

# ArXiv 配置
ARXIV_MAX_RESULTS=2000
ARXIV_REQUEST_TIMEOUT=30

# 缓存配置
CACHE_DEFAULT_EXPIRE=3600
MODEL_CACHE_EXPIRE=600
EXISTS_CACHE_EXPIRE=300

# pgAdmin 密码
PGADMIN_PASSWORD=admin123

# ============================================================
# 可选服务（按需配置）
# ============================================================

# SiYuan 笔记
# SIYUAN_API_URL=http://your_siyuan_host:6806
# SIYUAN_API_TOKEN=your_token

# Dify 知识库
# DIFY_BASE_URL=http://your_dify_host/v1
# DIFY_KB_API_KEY=your_api_key
# DIFY_ENABLED=false
