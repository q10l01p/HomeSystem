# Home System 配置示例
# 复制此文件为 .env 并修改相应的配置值

# PostgreSQL 数据库配置
DB_HOST=localhost
DB_PORT=15432
DB_NAME=homesystem
DB_USER=homesystem
DB_PASSWORD=your_secure_db_password_here

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=16379
REDIS_DB=0

# 可选：pgAdmin 配置（用于Web管理界面）
PGADMIN_PASSWORD=your_secure_pgadmin_password_here

# 应用程序配置
LOG_LEVEL=INFO
DEBUG=false

# ArXiv API 配置
ARXIV_MAX_RESULTS=2000
ARXIV_REQUEST_TIMEOUT=30

# 缓存配置
CACHE_DEFAULT_EXPIRE=3600
MODEL_CACHE_EXPIRE=600
EXISTS_CACHE_EXPIRE=300

# ============================================================
# LLM API 配置 - 硅基流动 (SiliconFlow)
# ============================================================
SILICONFLOW_API_KEY=sk-your_siliconflow_api_key_here
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1

# LLM 默认配置
DEFAULT_LLM_MODEL=siliconflow
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# ============================================================
# OCR 配置 - MinerU API
# ============================================================
# 获取 API Key: https://mineru.net/apiManage/docs
MINERU_API_KEY=your_mineru_api_key_here
MINERU_BASE_URL=https://mineru.net
MINERU_TIMEOUT=600
MINERU_POLL_INTERVAL=5
OCR_MAX_PAGES=50

# ============================================================
# 可选服务配置
# ============================================================

# SiYuan 笔记 API 配置
SIYUAN_API_URL=http://your_siyuan_host:6806
SIYUAN_API_TOKEN=your_siyuan_api_token_here
SIYUAN_TIMEOUT=30
SIYUAN_MAX_RETRIES=3

# Dify 知识库配置
DIFY_BASE_URL=http://your_dify_host/v1
DIFY_KB_API_KEY=your_dify_kb_api_key_here
